@model Tree.ViewModels.RegisterViewModel
@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <h2>Zarejestruj się</h2>
    <form id="registerForm" method="post">
        <div class="form-group">
            <label for="formName">Nazwa użytkownika</label>
            @Html.TextBoxFor(m => m.Username, new {@type = "text", @class = "form-control", @id = "formName", @name = "name", @placeholder = "Imię"})
            @Html.ValidationMessageFor(m=>m.Username)
            @*<input type="text" class="form-control" id="formName" name="name" placeholder="Imię">*@
        </div>
        <div class="form-group">
            <label for="formPassword">Hasło</label>
            @Html.TextBoxFor(m => m.Password, new {@type = "password", @class = "form-control", @id = "formPassword", @name = "password", @placeholder = "Hasło"})
            @Html.ValidationMessageFor(m => m.Password)
            @*<input type="password" class="form-control" id="formPassword" name="password" placeholder="Hasło">*@
        </div>
        <div class="form-group">
            <label for="formPassword">Potwierdź hasło</label>
            @Html.TextBoxFor(m => m.ConfirmPassword, new {@type = "password", @class = "form-control", @id = "formConfirmPassword", @name = "confirmPassword", @placeholder = "Powtórz hasło"})
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
            @*<input type="password" class="form-control" id="formPassword" name="password" placeholder="Hasło">*@
        </div>
        <input type="submit" value="Zarejestruj się" class="btn btn-primary"/>
    </form>
}